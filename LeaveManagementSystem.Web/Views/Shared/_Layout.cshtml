<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leave Management System</title>
 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" /> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/datatables.bootstrap4.css" /> 
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

</head>
<body class="d-flex">

    <!-- Sidebar -->
    <aside class="d-flex flex-column flex-shrink-0 p-3 text-bg-light shadow" style="width: 250px; height: 100vh; position: fixed; background-color:#a6a6a6;">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <i class="bi bi-building me-2 fs-4"></i>
            <span class="fs-5 fw-bold">Leave Management</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">

            <li class="nav-item">
                <a class="nav-link text-dark d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill"></i> Home
                </a>
            </li>

            @if (User.IsInRole(StaticRoles.Administrator))
            {
                <li>
                    <a class="nav-link text-dark d-flex align-items-center gap-2" data-bs-toggle="collapse" href="#adminMenu" role="button" aria-expanded="false" aria-controls="adminMenu">
                        <i class="bi bi-gear-fill"></i> Management
                    </a>
                    <div class="collapse ps-3" id="adminMenu">
                        <a class="nav-link text-dark" asp-controller="LeaveTypes" asp-action="Index">
                            <i class="bi bi-list-check"></i> Leave Types
                        </a>
                        <a class="nav-link text-dark" asp-controller="Periods" asp-action="Index">
                            <i class="bi bi-calendar-event-fill"></i> Periods
                        </a>

                        <a class="nav-link text-dark" asp-controller="LeaveAllocation" asp-action="Index">
                            <i class="bi bi-people-fill"></i> View Employees
                        </a>
                    </div>
                </li>
            }

            @if (User.Identity.IsAuthenticated && !User.IsInRole(StaticRoles.Administrator))
            {
                <li>
                    <a class="nav-link text-dark d-flex align-items-center gap-2" asp-controller="LeaveAllocation" asp-action="Details">
                        <i class="bi bi-calendar-check"></i> View Allocations
                    </a>
                </li>
            }

            <li>
                <a class="nav-link text-dark d-flex align-items-center gap-2" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-lock-fill"></i> Privacy
                </a>
            </li>
        </ul>

        <hr>
        <partial name="_LoginPartial" />
    </aside>

    <!-- Main Content -->
    <main class="flex-grow-1 ms-250 p-4" style="margin-left: 250px;">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/jquery.datatables.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
