<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leave Management System</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" /> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/datatables.bootstrap4.css" />
   
    


</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm border-bottom shadow-sm" style="background-color: #a9d0e7;" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index" style="color:#212529;">
                    <i class="bi bi-building"></i> Leave Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>

                        @if (User.IsInRole(StaticRoles.Administrator))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill"></i> Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="LeaveTypes" asp-action="Index">
                                            <i class="bi bi-list-check"></i> Leave Types
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Periods" asp-action="Index">
                                            <i class="bi bi-calendar-event-fill"></i> Periods
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>

    <main role="main" class="container py-4 flex-fill">
        @RenderBody()
    </main>

@*  <footer class="border-top footer text-muted py-3" style="background-color: #a9d0e7;">
        <div class="container">
            &copy; 2025 - Leave Management System - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
 *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    <!-- DataTables Core -->
    <script src="~/lib/datatables/js/jquery.datatables.js" asp-append-version="true"></script>
    <!-- DataTables Bootstrap 4 Integration -->
    <script src="~/lib/datatables/js/datatables.bootstrap4.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
